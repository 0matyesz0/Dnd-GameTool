<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dnd_gametool_project.ViewCharacterActivity"
    android:background="@drawable/sheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/name"
                android:textSize="@dimen/medium_size" />

            <EditText
                android:id="@+id/name_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/name_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="text"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">
                <TextView
                    android:id="@+id/class_value"
                    android:layout_width="@dimen/editText_width"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/race_value"
                    android:layout_width="@dimen/editText_width"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/class_value"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="17sp" />

            <ImageView
                android:id="@+id/class_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/class_value"
                android:layout_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/intelligence_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/intelligence"
                android:textSize="@dimen/medium_size" />

            <EditText
                android:id="@+id/intelligence_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/intelligence_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="number"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/constitution_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/constitution"
                android:textSize="@dimen/medium_size" />

            <EditText
                android:id="@+id/constitution_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/constitution_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="number"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/armourClass_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/armourClass"
                android:textSize="@dimen/small_size" />

            <EditText
                android:id="@+id/armourClass_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/armourClass_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="number"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/charisma_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/charisma"
                android:textSize="@dimen/medium_size" />

            <EditText
                android:id="@+id/charisma_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/charisma_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="number"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/level"
                android:textSize="@dimen/medium_size" />

            <EditText
                android:id="@+id/level_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/level_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="number"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dexterity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/dexterity"
                android:textSize="@dimen/medium_size" />

            <EditText
                android:id="@+id/dexterity_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/dexterity_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="number"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/experience_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/experience"
                android:textSize="@dimen/medium_size" />

            <EditText
                android:id="@+id/experience_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/experience_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="number"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/gold_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/gold"
                android:textSize="@dimen/medium_size" />

            <EditText
                android:id="@+id/gold_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/gold_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="number"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/hitDice_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/hitDice"
                android:textSize="@dimen/medium_size" />

            <EditText
                android:id="@+id/hitDice_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/hitDice_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="number"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/hp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/hp"
                android:textSize="@dimen/medium_size" />

            <EditText
                android:id="@+id/hp_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/hp_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="number"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/initiative_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/initiative"
                android:textSize="@dimen/medium_size" />

            <EditText
                android:id="@+id/initiative_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/initiative_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="number"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/perception_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/perception"
                android:textSize="@dimen/medium_size" />

            <EditText
                android:id="@+id/perception_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/perception_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="number"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/proficiency_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/proficiency"
                android:textSize="@dimen/medium_size" />

            <EditText
                android:id="@+id/proficiency_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/proficiency_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="number"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/speed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/speed"
                android:textSize="@dimen/medium_size" />

            <EditText
                android:id="@+id/speed_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/speed_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="number"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/strength_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/strength"
                android:textSize="@dimen/medium_size" />

            <EditText
                android:id="@+id/strength_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/strength_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="number"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/wisdom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutMargin"
                android:text="@string/wisdom"
                android:textSize="@dimen/medium_size" />

            <EditText
                android:id="@+id/wisdom_value"
                android:layout_width="@dimen/editText_width"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/wisdom_text"
                android:layout_margin="@dimen/layoutMargin"
                android:inputType="number"
                android:textSize="@dimen/characterEditSize" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/expProgressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/characterEditSize"
            android:gravity="center_horizontal"/>
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/expProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
